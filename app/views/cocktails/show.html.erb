<h1><%= @cocktail.name %></h1>
<ul>
  <li>
    <% @cocktail.doses.each do |dose| %>
    <%= dose.description %> <%= dose.ingredient.name %>
    <%= link_to dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash destroy_dose"></i>
        <% end  %>

    <% end  %>
  </li>
</ul>



